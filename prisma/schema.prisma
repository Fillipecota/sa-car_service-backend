generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id 
  name      String
  email     String   @unique
  password  String
  createdAt DateTime
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Product {
  id          String   @id 
  categoria   String
  modelo      String
  cor         String
  motor       Float
  pneu        String
  ano         Int
  status      String
  responsavel String
  createdAt   DateTime 

  @@map("products")
}

model Stock {
  id               String  @id 
  categoriaDoMotor String?
  motor            String
  pneu             String
  carcaca          String
  chassi           String
  quantidade       Int

  @@map("stock")
}

model Manutencao {
  id          String   @id 
  descricao   String
  equipamento String
  responsavel String
  tipo        String
  status      String   @default("Pendente")
  agendado    DateTime
  createdAt   DateTime 

  @@map("maintenance")
}

model Quality {
  id          String   @id 
  produto     String
  lote        String
  responsavel String
  status      String
  createdAt   DateTime

  @@map("quality")
}
